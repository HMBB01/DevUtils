<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="afkt.environment.use.AppViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/ViewTheme.Base_TextView"
            android:layout_height="80.0dp"
            android:text="@string/str_title"
            android:textStyle="bold" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                style="@style/ViewTheme.padding_lr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{viewModel.clickDefaultIMPL}"
                    android:text="【内置实现】切换环境 Activity" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{viewModel.clickSetServiceModule}"
                    android:text="【自定义配置】动态配置【Service】Module" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{viewModel.clickSetAllModule}"
                    android:text="【自定义配置】动态配置【全部】Module" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>