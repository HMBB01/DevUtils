<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Opt out of edge-to-edge enforcement for API level 35+ -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <!-- 不设置为全屏防止状态栏隐藏紧接着又显示 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@drawable/launcher_bg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Opt out of edge-to-edge enforcement for API level 35+ -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Opt out of edge-to-edge enforcement for API level 35+ -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>

    <!-- View 样式 -->

    <style name="ViewTheme">
        <!-- 解决控件字母自动大写问题 -->
        <item name="textAllCaps">false</item>
    </style>

    <style name="ViewTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 解决控件字母自动大写问题 -->
        <item name="textAllCaps">false</item>
    </style>

    <style name="ViewTheme.ToolbarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- 解决控件字母自动大写问题 -->
        <item name="textAllCaps">false</item>
    </style>

    <!-- Button 默认样式 -->

    <style name="ViewTheme.Base_Button" parent="Widget.AppCompat.Button">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">@dimen/dp_50</item>
        <!-- 设置向上边距 -->
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <!-- 设置字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 字体居中 -->
        <item name="android:gravity">center</item>
        <!-- 不绘制边距 -->
        <item name="android:includeFontPadding">false</item>
        <!-- 表示可以点击 -->
        <item name="android:clickable">true</item>
        <!-- 解决控件字母自动大写问题 -->
        <item name="textAllCaps">false</item>
    </style>

    <!-- TextView 默认样式 -->

    <style name="ViewTheme.Base_TextView">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">wrap_content</item>
        <!-- 设置字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 不绘制边距 -->
        <item name="android:includeFontPadding">false</item>
        <!-- 解决控件字母自动大写问题 -->
        <item name="textAllCaps">false</item>
    </style>

    <!-- TextView 边距样式 -->

    <style name="ViewTheme.margin_TextView">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">wrap_content</item>
        <!-- 设置向上边距 -->
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <!-- 设置向下边距 -->
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <!-- 设置字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 解决控件字母自动大写问题 -->
        <item name="textAllCaps">false</item>
    </style>

    <!-- 左右 Margin 样式 -->

    <style name="ViewTheme.margin_lr">
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
    </style>

    <!-- 左右 padding 样式 -->

    <style name="ViewTheme.padding_lr">
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
    </style>

    <!-- 分割线样式 -->

    <style name="ViewTheme.Base_Line_Vertical">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">@dimen/dp_0_5</item>
    </style>

    <!-- 分割线样式 -->

    <style name="ViewTheme.Base_Line_Horizontal">
        <!-- 设置铺满 -->
        <item name="android:layout_width">@dimen/dp_0_5</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>