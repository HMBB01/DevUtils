<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.ui_effect.recycler_view.ItemSlideViewModel" />
    </data>

    <LinearLayout
        style="@style/ViewTheme.LinearLayout.Vertical"
        android:background="@color/color_f5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vid_rv"
            style="@style/ViewTheme.RecyclerView"
            app:itemBinding="@{viewModel.adapter.itemBinding}"
            app:items="@{viewModel.adapter.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
</layout>