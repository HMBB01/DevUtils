<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemValue"
            type="afkt.project.features.ui_effect.recy_adapter.snap.SnapItemModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@color/color_f5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_12"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/dp_15"
            app:cardElevation="@dimen/dp_5">

            <LinearLayout
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    app:binding_url="@{itemValue.imageUrl}" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/ViewTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{itemValue.title}"
                    android:textSize="@dimen/sp_25"
                    tools:text="这是标题" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/ViewTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@{itemValue.subtitle}"
                    android:textColor="@color/color_55"
                    android:textSize="@dimen/sp_16"
                    tools:text="这是副标题" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/ViewTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@{itemValue.timeFormat}"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_13"
                    tools:text="2020.06.17" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>