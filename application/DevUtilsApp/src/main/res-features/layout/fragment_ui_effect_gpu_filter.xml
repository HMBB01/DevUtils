<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.ui_effect.gpu.GPUFilterViewModel" />
    </data>

    <LinearLayout
        style="@style/ViewTheme.LinearLayout.Padding.LR"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickSelect}"
            android:text="选择图片" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vid_rv"
            style="@style/ViewTheme.RecyclerView.Nested.False"
            android:orientation="horizontal"
            app:itemBinding="@{viewModel.adapterModel.itemBinding}"
            app:items="@{viewModel.adapterModel.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/ViewTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="@{viewModel.filterName}"
            android:textSize="@dimen/sp_15"
            tools:text="Filter Name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_20"
            app:binding_filter_bitmap="@{viewModel.filterBitmap}" />
    </LinearLayout>
</layout>