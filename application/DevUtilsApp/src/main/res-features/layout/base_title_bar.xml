<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="afkt.project.model.data.button.ButtonEnum" />

        <variable
            name="itemClick"
            type="dev.mvvm.command.BindingConsumer&lt;ButtonEnum&gt;" />

        <variable
            name="itemValue"
            type="ButtonEnum" />
    </data>

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_angle="270"
        app:hl_endColor="@color/colorPrimary"
        app:hl_startColor="@color/colorPrimaryDark">

        <com.hjq.bar.TitleBar
            android:id="@+id/vid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barStyle="transparent"
            app:lineVisible="false"
            app:titleSize="18.0sp"
            app:titleStyle="bold" />
    </com.lihang.ShadowLayout>
</layout>