<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <dev.widget.ui.round.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:dev_backgroundColor="@color/blue"
        app:dev_radiusLeftTop="@dimen/dp_10"
        app:dev_radiusRightTop="@dimen/dp_10">

        <dev.widget.ui.round.RoundTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="ShapeableImageView"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_28"
            app:dev_backgroundColor="@color/black"
            app:dev_radiusLeftTop="@dimen/dp_10"
            app:dev_radiusRightTop="@dimen/dp_10" />

        <include layout="@layout/fragment_ui_effect_material_shapeable_image_view" />
    </dev.widget.ui.round.RoundLinearLayout>
</LinearLayout>