<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.ui_effect.MultiSelectViewModel" />
    </data>

    <LinearLayout
        style="@style/ViewTheme.LinearLayout.Vertical"
        android:background="@color/color_33">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:binding_visibleOrGone="@{viewModel.adapterModel.selectSwitch}">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:layout_weight="1"
                android:onClick="@{viewModel.clickAllSelect}"
                android:text="全选" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:layout_weight="1"
                android:onClick="@{viewModel.clickUnAllSelect}"
                android:text="非全选" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:layout_weight="1"
                android:onClick="@{viewModel.clickInverseSelect}"
                android:text="反选" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:layout_weight="1"
                android:onClick="@{viewModel.clickCancel}"
                android:text="取消" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vid_rv"
            style="@style/ViewTheme.RecyclerView"
            app:itemBinding="@{viewModel.adapterModel.itemBinding}"
            app:items="@{viewModel.adapterModel.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
</layout>