<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="scanShape"
            type="dev.widget.ui.ScanShapeView" />

        <variable
            name="viewModel"
            type="afkt.project.features.ui_effect.qrcode.QRCodeScanViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/vid_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <dev.widget.ui.ScanShapeView
            android:id="@+id/vid_ssv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/dp_15"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/icon_image" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/shape_flashlight_selector"
                android:onClick="@{()->viewModel.clickFlashlight.invoke()}"
                android:selected="@{viewModel.flashlightStatus}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@mipmap/icon_square"
                android:onClick="@{()->viewModel.clickSquare.invoke(scanShape)}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@mipmap/icon_hexagon"
                android:onClick="@{()->viewModel.clickHexagon.invoke(scanShape)}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@mipmap/icon_annulus"
                android:onClick="@{()->viewModel.clickAnnulus.invoke(scanShape)}" />
        </LinearLayout>
    </FrameLayout>
</layout>