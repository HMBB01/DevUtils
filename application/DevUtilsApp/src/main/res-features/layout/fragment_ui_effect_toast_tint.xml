<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.ui_effect.ToastTintViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView style="@style/ViewTheme.NestedScrollView">

        <LinearLayout style="@style/ViewTheme.LinearLayout.Vertical">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:onClick="@{viewModel.clickToastSuccess}"
                android:text="Success Style Toast" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:onClick="@{viewModel.clickToastError}"
                android:text="Error Style Toast" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:onClick="@{viewModel.clickToastInfo}"
                android:text="Info Style Toast" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:onClick="@{viewModel.clickToastNormal}"
                android:text="Normal Style Toast" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:onClick="@{viewModel.clickToastWarning}"
                android:text="Warning Style Toast" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:onClick="@{viewModel.clickToastCustom}"
                android:text="Custom Style Toast" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>