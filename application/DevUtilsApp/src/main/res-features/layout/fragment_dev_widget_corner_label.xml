<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="labelView"
            type="dev.widget.ui.CornerLabelView" />

        <variable
            name="viewModel"
            type="afkt.project.features.dev_widget.CornerLabelViewModel" />
    </data>

    <dev.widget.custom.CustomNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f9"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/dp_20"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_10"
                    tools:targetApi="lollipop">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_130"
                        android:layout_height="@dimen/dp_130"
                        android:layout_gravity="center"
                        android:background="@mipmap/img_commodity" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:dev_fillColor="#9C27B0"
                        app:dev_flags="triangle"
                        app:dev_paddingCenter="@dimen/dp_10"
                        app:dev_text1="活动优惠"
                        app:dev_text2="特价"
                        app:dev_textColor2="#80FFFF" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:dev_fillColor="#F44336"
                        app:dev_flags="triangle|right"
                        app:dev_paddingCenter="@dimen/dp_10"
                        app:dev_text1="活动优惠"
                        app:dev_text2="特价"
                        app:dev_textColor2="@color/white" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:dev_fillColor="#3F51B5"
                        app:dev_flags="triangle|bottom"
                        app:dev_paddingCenter="@dimen/dp_10"
                        app:dev_text1="活动优惠"
                        app:dev_text2="特价"
                        app:dev_textColor2="#66ffffff" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        app:dev_fillColor="#009688"
                        app:dev_flags="triangle|right|bottom"
                        app:dev_paddingCenter="@dimen/dp_10"
                        app:dev_text1="活动优惠"
                        app:dev_text2="特价"
                        app:dev_textColor2="@color/black" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/dp_20"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_10"
                    tools:targetApi="lollipop">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_130"
                        android:layout_height="@dimen/dp_130"
                        android:layout_gravity="center"
                        android:background="@mipmap/img_commodity" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:dev_fillColor="#03A9F4"
                        app:dev_paddingCenter="@dimen/dp_3"
                        app:dev_text1="满减" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:dev_fillColor="#4CAF50"
                        app:dev_flags="right"
                        app:dev_paddingCenter="@dimen/dp_3"
                        app:dev_text1="买送" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:dev_fillColor="#CDDC39"
                        app:dev_flags="bottom"
                        app:dev_paddingCenter="@dimen/dp_3"
                        app:dev_text1="赠品" />

                    <dev.widget.ui.CornerLabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        app:dev_fillColor="#795548"
                        app:dev_flags="right|bottom"
                        app:dev_paddingCenter="@dimen/dp_3"
                        app:dev_text1="拼图" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10"
                tools:targetApi="lollipop">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_130"
                    android:layout_gravity="center"
                    android:background="@mipmap/img_commodity" />

                <dev.widget.ui.CornerLabelView
                    android:id="@+id/vid_clv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dev_fillColor="#FFC107"
                    app:dev_paddingCenter="@dimen/dp_3"
                    app:dev_text1="动态" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickColor.invoke(labelView)}"
                    android:text="color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickLeft.invoke(labelView)}"
                    android:text="left" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickTop.invoke(labelView)}"
                    android:text="top" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickTriangle.invoke(labelView)}"
                    android:text="triangle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickText1Minus.invoke(labelView)}"
                    android:text="text1-" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickText1Plus.invoke(labelView)}"
                    android:text="text1+" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickHeight1Minus.invoke(labelView)}"
                    android:text="height1-" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickHeight1Plus.invoke(labelView)}"
                    android:text="height1+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickText2Minus.invoke(labelView)}"
                    android:text="text2-" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickText2Plus.invoke(labelView)}"
                    android:text="text2+" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickHeight2Minus.invoke(labelView)}"
                    android:text="height2-" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="#DDD"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.clickHeight2Plus.invoke(labelView)}"
                    android:text="height2+" />
            </LinearLayout>
        </LinearLayout>
    </dev.widget.custom.CustomNestedScrollView>
</layout>