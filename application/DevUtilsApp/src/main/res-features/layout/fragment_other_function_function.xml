<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.other_function.FunctionViewModel" />
    </data>

    <LinearLayout
        style="@style/ViewTheme.Padding.LR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickString}"
            android:text="震动" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickStringTime}"
            android:text="铃声 - 播放一小段音频" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickStringGet}"
            android:text="是否存在通知权限" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickBean}"
            android:text="开启通知权限" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickBeanTime}"
            android:text="通知消息" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickBeanGet}"
            android:text="移除消息" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickFile}"
            android:text="回到桌面" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickFileGet}"
            android:text="打开手电筒" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickClear}"
            android:text="关闭手电筒" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickString}"
            android:text="是否创建桌面快捷方式" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickStringTime}"
            android:text="创建桌面快捷方式" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickStringGet}"
            android:text="删除桌面快捷方式" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickBean}"
            android:text="打印内存信息" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickBeanTime}"
            android:text="打印设备信息" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickBeanGet}"
            android:text="跳转到 APP 设置详情页面" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickFile}"
            android:text="打开 GPS 设置界面" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickFileGet}"
            android:text="打开网络设置界面" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ViewTheme.Button.Single"
            android:onClick="@{viewModel.clickClear}"
            android:text="跳转到系统设置页面" />
    </LinearLayout>
</layout>