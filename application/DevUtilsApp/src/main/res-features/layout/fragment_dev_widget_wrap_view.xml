<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.dev_widget.WrapViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView style="@style/ViewTheme.NestedScrollView">

        <LinearLayout style="@style/ViewTheme.LinearLayout.Vertical">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ViewTheme.Button.Single"
                android:onClick="@{viewModel.clickRefresh}"
                android:text="刷新" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <dev.widget.ui.WrapView
                    android:id="@+id/vid_wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>