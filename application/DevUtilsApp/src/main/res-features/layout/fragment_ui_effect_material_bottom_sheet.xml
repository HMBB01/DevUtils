<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/fragment_ui_effect_material_shapeable_image_view" />

        <View
            android:id="@+id/vid_bg_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_40"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vid_sheet_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:behavior_hideable="true"
                app:behavior_peekHeight="@dimen/dp_60"
                app:layout_behavior="@string/bottom_sheet_behavior">

                <dev.widget.ui.round.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:dev_backgroundColor="@color/blue"
                    app:dev_radiusLeftTop="@dimen/dp_10"
                    app:dev_radiusRightTop="@dimen/dp_10">

                    <dev.widget.ui.round.RoundTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="ShapeableImageView"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_28"
                        app:dev_backgroundColor="@color/black"
                        app:dev_radiusLeftTop="@dimen/dp_10"
                        app:dev_radiusRightTop="@dimen/dp_10" />

                    <include layout="@layout/fragment_ui_effect_material_shapeable_image_view" />
                </dev.widget.ui.round.RoundLinearLayout>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</layout>