<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="afkt.project.features.dev_widget.item_decoration.GridHorizontalViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView style="@style/ViewTheme.NestedScrollView">

        <LinearLayout style="@style/ViewTheme.LinearLayout.Vertical">

            <include
                android:id="@+id/vid_include"
                layout="@layout/include_grid_item_decoration_assist" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vid_rv"
                style="@style/ViewTheme.RecyclerView.Nested.False"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:itemBinding="@{viewModel.adapterModel.itemBinding}"
                app:items="@{viewModel.adapterModel.items}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>