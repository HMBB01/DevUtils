<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->

    <string name="app_name" translatable="false">Retrofit 请求示例</string>
    <string name="str_title" translatable="false">DevRetrofit - Retrofit + Kotlin Coroutines 封装示例</string>

    <!-- Application 样式 -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.Launcher" parent="AppTheme">
        <!-- 不设置为全屏防止状态栏隐藏紧接着又显示 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@drawable/launcher_bg</item>
    </style>

    <!-- View 样式 -->

    <style name="ViewTheme">
        <item name="textAllCaps">false</item>
    </style>

    <!-- 左右 padding 样式 -->

    <style name="ViewTheme.padding_lr">
        <item name="android:paddingLeft">10.0dp</item>
        <item name="android:paddingRight">10.0dp</item>
    </style>

    <!-- Button 默认样式 -->

    <style name="ViewTheme.Base_Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60.0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_marginBottom">10.0dp</item>
        <item name="android:paddingTop">15.0dp</item>
        <item name="android:paddingBottom">15.0dp</item>
        <item name="android:paddingLeft">10.0dp</item>
        <item name="android:paddingRight">10.0dp</item>
    </style>

    <!-- TextView 默认样式 -->

    <style name="ViewTheme.Base_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- TextView 标题样式 -->

    <style name="ViewTheme.Title" parent="ViewTheme.Base_TextView">
        <item name="android:layout_marginTop">15.0dp</item>
        <item name="android:layout_marginBottom">10.0dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView 子标题样式 -->

    <style name="ViewTheme.SubTitle" parent="ViewTheme.Base_TextView">
        <item name="android:layout_marginBottom">10.0dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/sky_blue</item>
    </style>
</resources>