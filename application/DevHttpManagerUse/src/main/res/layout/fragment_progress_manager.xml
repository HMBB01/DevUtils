<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="afkt.httpmanager.use.feature.progress.PMViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/vid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lineVisible="false"
            app:title="OkHttp 上传、下载进度监听示例"
            app:titleSize="18.0sp"
            app:titleStyle="bold" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                style="@style/ViewTheme.padding_lr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/ViewTheme.SubTitle"
                    android:text="DevHttpManager - 上传监听" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/ViewTheme.SubTitle"
                    android:text="DevHttpManager - 下载监听" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{(v)->viewModel.clickDownloadVideo.invoke()}"
                    android:text="下载视频" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{(v)->viewModel.clickReDownloadVideo.invoke()}"
                    android:text="重新下载视频" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{(v)->viewModel.clickDownloadApk.invoke()}"
                    android:text="下载 APK" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{(v)->viewModel.clickReDownloadApk.invoke()}"
                    android:text="重新下载 APK" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/ViewTheme.SubTitle"
                    android:text="OkHttp - 下载监听" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{(v)->viewModel.clickDownloadVideoOkHttp.invoke()}"
                    android:text="下载视频" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ViewTheme.Base_Button"
                    android:onClick="@{(v)->viewModel.clickReDownloadVideoOkHttp.invoke()}"
                    android:text="重新下载视频" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>