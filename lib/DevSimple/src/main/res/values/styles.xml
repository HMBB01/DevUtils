<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- View 样式 -->

    <style name="ViewTheme">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Padding、Margin 基础样式 -->

    <style name="ViewTheme.Padding" />

    <style name="ViewTheme.Margin" />

    <!-- Padding、Margin 无边距样式 -->

    <style name="ViewTheme.Padding.None">
        <item name="android:padding">0.0dp</item>
    </style>

    <style name="ViewTheme.Margin.None">
        <item name="android:layout_margin">0.0dp</item>
    </style>

    <!-- LinearLayout 基础样式 -->

    <style name="ViewTheme.LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- LinearLayout 样式 -->

    <style name="ViewTheme.LinearLayout.Vertical" />

    <style name="ViewTheme.LinearLayout.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- LinearLayout 边距基础样式 -->

    <style name="ViewTheme.LinearLayout.Margin" />

    <style name="ViewTheme.LinearLayout.Padding" />

    <!-- NestedScrollView 基础样式 -->

    <style name="ViewTheme.NestedScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- NestedScrollView 样式 -->

    <style name="ViewTheme.NestedScrollView.FillView">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="ViewTheme.NestedScrollView.White">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- NestedScrollView 边距基础样式 -->

    <style name="ViewTheme.NestedScrollView.Margin" />

    <style name="ViewTheme.NestedScrollView.Padding" />

    <!-- RecyclerView 基础样式 -->

    <style name="ViewTheme.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:orientation">vertical</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- RecyclerView 样式 -->

    <style name="ViewTheme.RecyclerView.Nested" />

    <!-- RecyclerView 嵌套在 NestedScrollView 中样式 -->

    <style name="ViewTheme.RecyclerView.Nested.False">
        <item name="android:nestedScrollingEnabled">false</item>
    </style>

    <!-- RecyclerView 嵌套在 RecyclerView 中样式 -->

    <style name="ViewTheme.RecyclerView.Nested.True">
        <item name="android:nestedScrollingEnabled">true</item>
    </style>

    <!-- RecyclerView 边距基础样式 -->

    <style name="ViewTheme.RecyclerView.Margin" />

    <style name="ViewTheme.RecyclerView.Padding" />
</resources>